{
  "name": "starterfront",
  "version": "1.0.0",
  "description": "lolo",
  "main": "index.html",
  "config": {
    "src": "./src",
    "style": "./src/assets/stylesheets",
    "image": "./src/assets/images/**/*.{svg,png,jpg}",
    "font": "./src/assets/fonts/**/*.{woff,woff2}",
    "pug": "./src/views/templates",
    "build": "./build"
  },
  "scripts": {
    "start": "npm-run-all -s clean build -p server watch:*",
        "watch:css": "node-sass $npm_package_config_style/style.sass -o $npm_package_config_build -w",
        "watch:js": "watchify -t [ babelify --presets [es2017] ] src/assets/javascripts/app.js -o $npm_package_config_build/app.js -v",
        "watch:pug": "pug $npm_package_config_pug -o $npm_package_config_build -wP",
        "watch:img": "cpx $npm_package_config_image $npm_package_config_build/images -wuv",
        "watch:font": "cpx $npm_package_config_font $npm_package_config_build/fonts -wuv",
    "build": "npm-run-all clean build:*",
        "build:css": "node-sass $npm_package_config_style/style.sass $npm_package_config_build/style.css -r",
        "build:js": "browserify -t [ babelify --presets [es2017] ] src/assets/javascripts/app.js -o $npm_package_config_build/app.js",
        "build:pug": "pug $npm_package_config_pug -o $npm_package_config_build -P",
        "build:img": "cpx $npm_package_config_image $npm_package_config_build/images -vC",
        "build:font": "cpx $npm_package_config_font $npm_package_config_build/fonts -vC",
    "dist": "npm-run-all build dist:*",
        "dist:prefix-css": "autoprefixer-cli $npm_package_config_build/style.css",
        "dist:minify-css": "cleancss -o $npm_package_config_build/style.min.css  $npm_package_config_build/style.css",
        "dist:minify-js": "babili $npm_package_config_build/app.js -o $npm_package_config_build/app.min.js",
        "dist:set-env-css": "rexreplace style.css style.min.css $npm_package_config_build/*.html",
        "dist:set-env-js": "rexreplace app.js app.min.js $npm_package_config_build/*.html",
        "dist:clean": "rimraf $npm_package_config_build/style.css $npm_package_config_build/app.js",
    "clean": "rimraf $npm_package_config_build",
    "server": "browser-sync start --server build --files build --port 4040 --no-notify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/clovis-maniguet/starter-front.git"
  },
  "author": "Clovis Maniguet <clovis.maniguet@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/clovis-maniguet/starter-front.git#readme",
  "devDependencies": {
    "autoprefixer-cli": "^1.0.0",
    "babel-preset-es2017": "^6.22.0",
    "babelify": "^7.3.0",
    "babili": "0.0.12",
    "browser-sync": "^2.18.7",
    "browserify": "^13.1.1",
    "clean-css-cli": "^4.0.10",
    "cpx": "^1.5.0",
    "node-sass": "^3.13.0",
    "npm-run-all": "^4.0.1",
    "pug-cli": "^1.0.0-alpha6",
    "rexreplace": "^2.2.3",
    "rimraf": "^2.6.1",
    "watchify": "^3.7.0"
  }
}
